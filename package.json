{
  "name": "tech-boss",
  "displayName": "Tech Boss",
  "description": "AI-powered code assistant using Google Gemini",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "code completion",
    "gemini",
    "copilot",
    "autocomplete"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "techBoss.triggerCompletion",
        "title": "Tech Boss: Trigger Completion"
      },
      {
        "command": "techBoss.configure",
        "title": "Tech Boss: Configure API Key"
      },
      {
        "command": "techBoss.openChat",
        "title": "Tech Boss: Open Chat Panel",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "techBoss.clearContext",
        "title": "Tech Boss: Clear Context"
      },
      {
        "command": "techBoss.addSelection",
        "title": "Tech Boss: Add Selection to Context",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "techBoss.addSelection",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "techBoss.addSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "techBoss.addSelection",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tech-boss",
          "title": "Tech Boss",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "tech-boss": [
        {
          "type": "webview",
          "id": "techBoss.chatView",
          "name": "Chat"
        }
      ]
    },
    "configuration": {
      "title": "Tech Boss",
      "properties": {
        "techBoss.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key"
        },
        "techBoss.model": {
          "type": "string",
          "default": "gemini-2.0-flash-exp",
          "enum": [
            "gemini-2.0-flash-exp",
            "gemini-1.5-flash-002",
            "gemini-1.5-pro-002"
          ],
          "enumDescriptions": [
            "Gemini 2.0 Flash (Experimental) - Fastest, latest model",
            "Gemini 1.5 Flash - Stable, fast generation",
            "Gemini 1.5 Pro - Stable, advanced reasoning"
          ],
          "description": "Gemini model to use"
        },
        "techBoss.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Tech Boss"
        },
        "techBoss.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for generation (0-1)"
        },
        "techBoss.maxTokens": {
          "type": "number",
          "default": 2048,
          "description": "Maximum tokens to generate"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  }
}
